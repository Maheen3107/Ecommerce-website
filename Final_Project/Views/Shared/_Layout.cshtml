    <script src="https://example.com/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://example.com/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://example.com/js/site.js"></script>

    <script>
        const categories = [
            { name: "Winter Coats", url: "/WinterCoats" },
            { name: "Heels", url: "/Heels" },
            { name: "Bags", url: "/Bags" },
            { name: "Perfumes", url: "/Perfumes" },
            { name: "Summer", url: "/Summer" },
            { name: "New Arrival", url: "/NewArrival" }
        ];

        function searchProducts() {
            const query = document.getElementById("searchInput").value.toLowerCase();
            const filteredCategories = categories.filter(category =>
                category.name.toLowerCase().includes(query)
            );

            displaySearchResults(filteredCategories);
            return false; // Prevent form submission
        }

        function displaySearchResults(results) {
            const resultsContainer = document.getElementById("resultsContainer");
            resultsContainer.innerHTML = "";

            if (results.length === 0) {
                resultsContainer.innerHTML = "<p>No categories found.</p>";
            } else {
                results.forEach(result => {
                    const resultElement = document.createElement("div");
                    resultElement.innerHTML = `<a href="${result.url}">${result.name}</a>`;
                    resultsContainer.appendChild(resultElement);
                });
            }
        }
    </script>


